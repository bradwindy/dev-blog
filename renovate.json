{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", ":semanticCommits"],
  "labels": ["dependencies"],
  "timezone": "Pacific/Auckland",
  "schedule": ["before 9am on monday"],
  "minimumReleaseAge": "3 days",
  "osvVulnerabilityAlerts": true,
  "rebaseWhen": "conflicted",
  "prConcurrentLimit": 10,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["before 6am on monday"]
  },
  "packageRules": [
    {
      "description": "Automerge minor/patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch",
      "minimumReleaseAge": "7 days"
    },
    {
      "description": "DevDependencies can update faster",
      "matchDepTypes": ["devDependencies"],
      "minimumReleaseAge": "0 days"
    },
    {
      "description": "Require dashboard approval for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "dependencyDashboardApproval": true
    },
    {
      "groupName": "React",
      "matchPackageNames": ["/^react/", "/^@types/react/"]
    },
    {
      "groupName": "Next.js",
      "matchPackageNames": ["/^next/", "/^@next//", "/^eslint-config-next/"]
    },
    {
      "groupName": "MDX",
      "matchPackageNames": ["/^@mdx-js//", "/^@next/mdx/", "/^@types/mdx/"]
    },
    {
      "groupName": "Tailwind CSS",
      "matchPackageNames": ["/^tailwindcss/", "/^@tailwindcss//"]
    },
    {
      "groupName": "Radix UI",
      "matchPackageNames": ["/^@radix-ui//"]
    },
    {
      "groupName": "Vercel",
      "matchPackageNames": ["/^@vercel//"]
    },
    {
      "groupName": "Rehype plugins",
      "matchPackageNames": ["/^rehype-/"]
    },
    {
      "groupName": "Remark plugins",
      "matchPackageNames": ["/^remark-/"]
    }
  ]
}
